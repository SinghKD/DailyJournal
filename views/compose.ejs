<%- include("partials/header") -%>

    <h1>Compose</h1>

    <form action="/compose" method="POST">

        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="newTitle" autocomplete="off">
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea name="newBody" class="form-control" cols="30" rows="10" autocomplete="off"></textarea>
        </div>


        <button type="submit" class="btn btn-primary">Publish</button>
    </form>

<%- include("partials/footer") -%>